{
  "name": "Blue Candle",
  "colors": {
    "editor.background": "#0d1117", // Fond principal
    "editor.foreground": "#c9d1d9", // Couleur de texte par défaut
    "editor.selectionBackground": "#FFAC4D33", // Couleur de la sélection (accent + transparence)
    "editor.lineHighlightBackground": "#161b22", // Surlignage de la ligne active
    "editorCursor.foreground": "#FFAC4D", // Couleur du curseur (accent)
    "editorWhitespace.foreground": "#30363d", // Espaces invisibles
    "editorIndentGuide.background1": "#30363d", // Guides d'indentation
    "editorIndentGuide.activeBackground1": "#FFAC4D", // Guide d'indentation actif (accent)
    "editorLineNumber.foreground": "#6e7681", // Numéros de ligne
    "editorLineNumber.activeForeground": "#c9d1d9", // Numéro de la ligne active

    // Barre latérale et d'activités
    "sideBar.background": "#161b22", // Fond de la barre latérale
    // "sideBar.foreground": "#8b949e", // Texte de la barre latérale // ! conflict with git
    "activityBar.background": "#0d1117", // Fond de la barre d'activités
    "activityBar.foreground": "#c9d1d9", // Icônes de la barre d'activités
    "activityBarBadge.background": "#FFAC4D", // Badge d'activité
    "activityBarBadge.foreground": "#0d1117", // Texte des badges

    // Barre d'état
    "statusBar.background": "#0d1117", // Fond de la barre d'état
    "statusBar.foreground": "#c9d1d9", // Texte de la barre d'état
    "statusBar.debuggingBackground": "#161b22", // Fond en mode debug
    "statusBar.debuggingForeground": "#FFAC4D", // Texte en mode debug

    // Boutons
    "button.background": "#FFAC4D", // Fond des boutons
    "button.hoverBackground": "#FFAC4DCC", // Fond au survol (accent + opacité)
    "button.foreground": "#0d1117", // Texte des boutons

    // Panneaux et modaux
    "panel.background": "#161b22", // Fond des panneaux (terminal, problèmes, etc.)
    "panel.border": "#30363d", // Bordure des panneaux
    "panelTitle.activeForeground": "#c9d1d9", // Titre actif des panneaux
    "panelTitle.inactiveForeground": "#6e7681", // Titre inactif des panneaux

    // Barre de titre
    "titleBar.activeBackground": "#161b22", // Fond de la barre de titre active
    "titleBar.activeForeground": "#c9d1d9", // Texte de la barre de titre active
    "titleBar.inactiveBackground": "#0d1117", // Fond de la barre de titre inactive
    "titleBar.inactiveForeground": "#6e7681", // Texte de la barre de titre inactive

    // Surlignage et erreurs
    "editorError.foreground": "#F47067", // Couleur des erreurs
    "editorWarning.foreground": "#FFA657", // Couleur des avertissements
    "editorInfo.foreground": "#A5D6FF", // Couleur des infos
    "editorHint.foreground": "#D2A8FF", // Couleur des suggestions
    "editorBracketMatch.background": "#161b22", // Fond des crochets correspondants
    "editorBracketMatch.border": "#FFAC4D", // Bordure des crochets correspondants

    // Liens et surlignages
    "textLink.foreground": "#FFAC4D", // Couleur des liens
    "textLink.activeForeground": "#FFA657", // Liens actifs
    "textPreformat.foreground": "#D2A8FF", // Texte préformaté

    // Scrollbars
    "scrollbarSlider.background": "#ffffff1a", // Fond des scrollbars (accent + opacité)
    "scrollbarSlider.hoverBackground": "#ffffff33", // Scrollbar survolée (accent + opacité)
    "scrollbarSlider.activeBackground": "#ffffff4d", // Scrollbar active (accent + opacité)

    /* --- Onglets --- */

    // Fond de la barre des onglets
    "tab.activeBackground": "#161b22",
    "tab.inactiveBackground": "#0d1117",
    "tab.hoverBackground": "#161b22",
    "tab.unfocusedActiveBackground": "#161b22",
    "tab.unfocusedInactiveBackground": "#0d1117",

    // Texte des onglets
    "tab.activeForeground": "#c9d1d9",
    "tab.inactiveForeground": "#6e7681",
    "tab.hoverForeground": "#c9d1d9",
    "tab.unfocusedActiveForeground": "#8b949e",
    "tab.unfocusedInactiveForeground": "#6e7681",

    // Bordures des onglets
    "tab.border": "#30363d",
    "tab.activeBorder": "#FFAC4D", // Bordure sous l'onglet actif (accent)
    "tab.unfocusedActiveBorder": "#8b949e", // Bordure sous l'onglet actif mais non focalisé
    "tab.hoverBorder": "#FFAC4D", // Bordure lors du survol

    // Background global (en dehors des onglets)
    "editorGroupHeader.tabsBackground": "#0d1117", // Fond de l'en-tête des groupes d'onglets
    "editorGroupHeader.tabsBorder": "#30363d", // Bordure entre les groupes d'onglets

    /* --- Latéralle Gauche --- */

    // Fond des sections (comme "Explorer", "Recherche")
    "sideBarSectionHeader.background": "#161b22",
    "sideBarSectionHeader.foreground": "#c9d1d9", // Titre des sections

    // Éléments dans la barre latérale (onglets)
    "list.activeSelectionBackground": "#FFAC4D33", // Fond des éléments sélectionnés
    "list.activeSelectionForeground": "#FFAC4D", // Texte des éléments sélectionnés
    "list.inactiveSelectionBackground": "#30363d", // Fond pour les sélections inactives
    "list.inactiveSelectionForeground": "#c9d1d9", // Texte pour les sélections inactives
    "list.hoverBackground": "#161b22", // Fond lors du survol
    "list.hoverForeground": "#c9d1d9", // Texte lors du survol
    "list.focusBackground": "#FFAC4D33", // Fond pour les éléments avec le focus
    "list.focusForeground": "#FFAC4D", // Texte pour les éléments avec le focus

    // Icônes dans la barre latérale
    "sideBarTitle.foreground": "#c9d1d9", // Titre de la barre latérale
    "activityBar.inactiveForeground": "#6e7681", // Couleur des icônes inactives
    "activityBar.activeBorder": "#FFAC4D", // Bordure sous l'icône active

    // Fichiers ignorés (Git)
    "gitDecoration.ignoredResourceForeground": "#6e7681", // Atténuer les fichiers ignorés
    "gitDecoration.untrackedResourceForeground": "#FFAC4D", // Mettre en surbrillance les fichiers non suivis
    "gitDecoration.modifiedResourceForeground": "#A5D6FF", // Couleur des fichiers modifiés
    "gitDecoration.deletedResourceForeground": "#F47067", // Couleur des fichiers supprimés
    "gitDecoration.conflictingResourceForeground": "#FFA657", // Conflits Git
    "gitDecoration.submoduleResourceForeground": "#7ee787" // Sous-modules Git
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#546E7A"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": {
        "foreground": "#EEFFFF"
      }
    },
    {
      "name": "Colors",
      "scope": ["constant.other.color"],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FF5370"
      }
    },
    {
      "name": "Keyword, Storage",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#C792EA"
      }
    },
    {
      "name": "Operator, Misc",
      "scope": [
        "keyword.control",
        "constant.other.color",
        "punctuation",
        "meta.tag",
        "punctuation.definition.tag",
        "punctuation.separator.inheritance.php",
        "punctuation.definition.tag.html",
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html",
        "punctuation.section.embedded",
        "keyword.other.template",
        "keyword.other.substitution"
      ],
      "settings": {
        "foreground": "#89DDFF"
      }
    },
    {
      "name": "Tag",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml",
        "markup.deleted.git_gutter"
      ],
      "settings": {
        "foreground": "#f07178"
      }
    },
    {
      "name": "Function, Special Method",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#82AAFF"
      }
    },
    {
      "name": "Block Level Variables",
      "scope": ["meta.block variable.other"],
      "settings": {
        "foreground": "#f07178"
      }
    },
    {
      "name": "Other Variable, String Link",
      "scope": ["support.other.variable", "string.other.link"],
      "settings": {
        "foreground": "#f07178"
      }
    },
    {
      "name": "Number, Constant, Function Argument, Tag Attribute, Embedded",
      "scope": [
        "constant.numeric",
        "constant.language",
        "support.constant",
        "constant.character",
        "constant.escape",
        "variable.parameter",
        "keyword.other.unit",
        "keyword.other"
      ],
      "settings": {
        "foreground": "#F78C6C"
      }
    },
    {
      "name": "String, Symbols, Inherited Class, Markup Heading",
      "scope": [
        "string",
        "constant.other.symbol",
        "constant.other.key",
        "entity.other.inherited-class",
        "markup.heading",
        "markup.inserted.git_gutter",
        "meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "foreground": "#C3E88D"
      }
    },
    {
      "name": "Class, Support",
      "scope": [
        "entity.name",
        "support.type",
        "support.class",
        "support.other.namespace.use.php",
        "meta.use.php",
        "support.other.namespace.php",
        "markup.changed.git_gutter",
        "support.type.sys-types"
      ],
      "settings": {
        "foreground": "#FFCB6B"
      }
    },
    {
      "name": "Entity Types",
      "scope": ["support.type"],
      "settings": {
        "foreground": "#B2CCD6"
      }
    },
    {
      "name": "CSS Class and Support",
      "scope": [
        "source.css support.type.property-name",
        "source.sass support.type.property-name",
        "source.scss support.type.property-name",
        "source.less support.type.property-name",
        "source.stylus support.type.property-name",
        "source.postcss support.type.property-name"
      ],
      "settings": {
        "foreground": "#B2CCD6"
      }
    },
    {
      "name": "Sub-methods",
      "scope": [
        "entity.name.module.js",
        "variable.import.parameter.js",
        "variable.other.class.js"
      ],
      "settings": {
        "foreground": "#FF5370"
      }
    },
    {
      "name": "Language methods",
      "scope": ["variable.language"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#FF5370"
      }
    },
    {
      "name": "entity.name.method.js",
      "scope": ["entity.name.method.js"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#82AAFF"
      }
    },
    {
      "name": "meta.method.js",
      "scope": [
        "meta.class-method.js entity.name.function.js",
        "variable.function.constructor"
      ],
      "settings": {
        "foreground": "#82AAFF"
      }
    },
    {
      "name": "Attributes",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#C792EA"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "text.html.basic entity.other.attribute-name.html",
        "text.html.basic entity.other.attribute-name"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#FFCB6B"
      }
    },
    {
      "name": "CSS Classes",
      "scope": ["entity.other.attribute-name.class"],
      "settings": {
        "foreground": "#FFCB6B"
      }
    },
    {
      "name": "CSS ID's",
      "scope": ["source.sass keyword.control"],
      "settings": {
        "foreground": "#82AAFF"
      }
    },
    {
      "name": "Inserted",
      "scope": ["markup.inserted"],
      "settings": {
        "foreground": "#C3E88D"
      }
    },
    {
      "name": "Deleted",
      "scope": ["markup.deleted"],
      "settings": {
        "foreground": "#FF5370"
      }
    },
    {
      "name": "Changed",
      "scope": ["markup.changed"],
      "settings": {
        "foreground": "#C792EA"
      }
    },
    {
      "name": "Regular Expressions",
      "scope": ["string.regexp"],
      "settings": {
        "foreground": "#89DDFF"
      }
    },
    {
      "name": "Escape Characters",
      "scope": ["constant.character.escape"],
      "settings": {
        "foreground": "#89DDFF"
      }
    },
    {
      "name": "URL",
      "scope": ["*url*", "*link*", "*uri*"],
      "settings": {
        "fontStyle": "underline"
      }
    },
    {
      "name": "Decorators",
      "scope": [
        "tag.decorator.js entity.name.tag.js",
        "tag.decorator.js punctuation.definition.tag.js"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#82AAFF"
      }
    },
    {
      "name": "ES7 Bind Operator",
      "scope": [
        "source.js constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#FF5370"
      }
    },
